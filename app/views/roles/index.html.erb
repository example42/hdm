<div class="container-fluid">
  <h1>Roles</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @roles.each do |role| %>
        <tr>
          <td>
            <%= role.name %>
          </td>      
          <td>
            <%= link_to role, class:"btn btn-sm btn-light min-width-btn" do %>
              <%= icon "eye" %>
              Show
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
